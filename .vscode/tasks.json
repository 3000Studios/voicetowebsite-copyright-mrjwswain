{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "auto-commit",
      "type": "shell",
      "command": "git add . && git commit -m \"auto-update\" || echo \"no changes\" && git push",
      "problemMatcher": []
    },
    {
      "label": "Repo: Install",
      "type": "shell",
      "command": "npm install",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Repo: Format Check",
      "type": "shell",
      "command": "npm run format:check",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Repo: Build",
      "type": "shell",
      "command": "npm run build",
      "problemMatcher": ["$tsc"],
      "group": "build"
    },
    {
      "label": "Repo: Test",
      "type": "shell",
      "command": "npm test",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Repo: Full Check",
      "dependsOrder": "sequence",
      "dependsOn": ["Repo: Install", "Repo: Format Check", "Repo: Build", "Repo: Test"],
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Repo: Verify",
      "type": "shell",
      "command": "npm run verify",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Repo: Deploy",
      "type": "shell",
      "command": "npm run deploy",
      "dependsOrder": "sequence",
      "dependsOn": ["Repo: Verify"],
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Repo: Auto Ship",
      "type": "shell",
      "command": "npm run auto:ship",
      "dependsOrder": "sequence",
      "dependsOn": ["Repo: Verify"],
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Repo: Heal",
      "type": "shell",
      "command": "npm run heal",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": ".*"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Self-heal loop starting.*",
          "endsPattern": ".*cycle complete.*"
        }
      }
    },
    {
      "label": "ðŸš€ Dev: Site (Vite)",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*VITE.*",
          "endsPattern": ".*ready in.*"
        }
      }
    },
    {
      "label": "âš¡ Dev: Worker",
      "type": "shell",
      "command": "npm run dev:worker",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Ready on.*",
          "endsPattern": ".*Listening on.*"
        }
      }
    },
    {
      "label": "ðŸ”¥ Dev: All",
      "type": "shell",
      "command": "npm run dev:all",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*starting.*",
          "endsPattern": ".*ready in.*"
        }
      }
    }
  ]
}
