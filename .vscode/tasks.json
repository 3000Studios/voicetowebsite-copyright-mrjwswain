{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Repo: Install",
      "type": "shell",
      "command": "npm install",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Repo: Lint",
      "type": "shell",
      "command": "npm run lint",
      "problemMatcher": ["$eslint-stylish"],
      "group": "test"
    },
    {
      "label": "Repo: Build",
      "type": "shell",
      "command": "npm run build",
      "problemMatcher": ["$tsc"],
      "group": "build"
    },
    {
      "label": "Repo: Test",
      "type": "shell",
      "command": "npm test",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Repo: Full Check",
      "dependsOrder": "sequence",
      "dependsOn": ["Repo: Install", "Repo: Lint", "Repo: Build", "Repo: Test"],
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "ðŸš€ Dev: Site (Vite)",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*VITE.*",
          "endsPattern": ".*ready in.*"
        }
      }
    }
  ]
}
