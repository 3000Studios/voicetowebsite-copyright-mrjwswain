{
  // ============================================
  // EDITOR SETTINGS (AUTONOMOUS MODE)
  // ============================================
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.linkedEditing": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.definitionLinkOpensInPeek": true,
  "editor.suggestSelection": "first",
  "editor.quickSuggestions": {
    "strings": true,
    "comments": true,
    "other": true
  },
  "editor.inlineSuggest.enabled": true,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 120,
  "editor.rulers": [80, 120],
  "editor.semanticHighlighting.enabled": true,
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingQuotes": "always",
  "editor.autoSurround": "languageDefined",
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.parameterHints.enabled": true,
  "editor.hover.enabled": true,
  "editor.hover.sticky": true,
  "editor.lightbulb.enabled": true,
  "editor.showUnused": true,
  "editor.unusualLineTerminators": "auto",

  // ============================================
  // CODE ACTIONS ON SAVE (AUTO-FIX)
  // ============================================
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit",
    "source.organizeImports": "explicit",
    "source.removeUnused": "explicit"
  },

  // ============================================
  // FILES SETTINGS (AUTO-MODE)
  // ============================================
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.encoding": "utf8",
  "files.hotExit": "onExitAndWindowClose",

  // ============================================
  // FILES EXCLUDE (Hide from Explorer)
  // ============================================
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/.wrangler": true,
    "**/Media": true,
    "**/black-vault": true,
    "**/.DS_Store": true,
    "**/*.log": true
  },

  // ============================================
  // SEARCH EXCLUDE
  // ============================================
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.wrangler": true,
    "**/Media": true,
    "**/black-vault": true,
    "**/*.lock": true,
    "package-lock.json": true,
    "pnpm-lock.yaml": true
  },

  // ============================================
  // FILES WATCHER EXCLUDE (Performance)
  // ============================================
  "files.watcherExclude": {
    "**/.git/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/.wrangler/**": true,
    "**/Media/**": true,
    "**/black-vault/**": true,
    "**/voicetowebsite-orchestrator/node_modules/**": true,
    "**/*.log": true
  },

  // ============================================
  // ESLINT SETTINGS (AUTONOMOUS FIXING)
  // ============================================
  "eslint.enable": true,
  "eslint.packageManager": "npm",
  "eslint.run": "onSave",
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "json",
    "jsonc"
  ],
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "eslint.debug": false,

  // ============================================
  // TYPESCRIPT SETTINGS
  // ============================================
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.tsserver.maxTsServerMemory": 4096,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.autoImports": true,
  "typescript.preferences.quoteStyle": "single",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,
  "javascript.preferences.quoteStyle": "single",

  // ============================================
  // NPM SETTINGS
  // ============================================
  "npm.packageManager": "npm",
  "npm.enableScriptExplorer": true,
  "npm.scriptExplorerAction": "run",

  // ============================================
  // GIT SETTINGS (AUTO-COMMIT & PUSH)
  // ============================================
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.autorefresh": true,
  "git.confirmSync": false,
  "git.enableCommitSigning": false,
  "git.ignoreLimitWarning": true,
  "git.ignoreMissingGitWarning": false,
  "git.detectSubmodules": true,

  // ============================================
  // TERMINAL SETTINGS (AUTONOMOUS EXEC)
  // ============================================
  "terminal.integrated.cwd": "${workspaceFolder}",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.env.windows": {
    "NODE_ENV": "development"
  },
  "terminal.integrated.inheritEnv": true,
  "terminal.integrated.automationProfile.windows": {
    "path": "pwsh",
    "args": ["-NoProfile", "-NoLogo"]
  },
  "terminal.integrated.enablePersistentSessions": true,
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell",
      "args": ["-NoProfile"]
    }
  },

  // ============================================
  // LANGUAGE-SPECIFIC FORMATTING
  // ============================================
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on"
  },
  "[html]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ============================================
  // SPELL CHECKER (cSpell)
  // ============================================
  "cSpell.words": [
    "ADSENSE",
    "Adsense",
    "AUTOINCREMENT",
    "Cloudflare",
    "Metadata",
    "Negotiables",
    "Playfair",
    "Reshimming",
    "SAMEORIGIN",
    "Segoe",
    "VOICETOWEBSITE",
    "Voiceto",
    "Wrangler",
    "adsbygoogle",
    "adsense",
    "appstore",
    "badsbygoogle",
    "buildhome",
    "ecommerce",
    "esbuild",
    "genai",
    "googlesyndication",
    "lucide",
    "massets",
    "mbuilding",
    "mdist",
    "mindex",
    "morphism",
    "mvite",
    "nosniff",
    "pagead",
    "playsinline",
    "protobufjs",
    "spectralize",
    "vite",
    "vitejs",
    "vitest",
    "voicetowebsite",
    "vtwcfm",
    "webdev",
    "webforge",
    "workerd",
    "wrangler"
  ],
  "cSpell.enableFiletypes": ["!git-commit"],

  // ============================================
  // CLOUDFLARE WORKERS / WRANGLER
  // ============================================
  "cloudflare.workers.enableLinting": true,

  // ============================================
  // PATH INTELLISENSE
  // ============================================
  "path-intellisense.mappings": {
    "@": "${workspaceFolder}/src"
  },

  // ============================================
  // EXTENSIONS
  // ============================================
  "extensions.ignoreRecommendations": false,

  // ============================================
  // CONTINUE.DEV SETTINGS (AI Chat & Commands)
  // ============================================
  "continue.enableDebugLogging": true,
  "continue.enableServerAutoLaunch": true,
  "continue.customAttributes": {
    "voiceToWebsiteIntegration": "enabled",
    "uiCommandAPI": "https://voicetowebsite.com/api/ui-command",
    "voiceEnabled": true,
    "customGptEnabled": true
  },

  // ============================================
  // VOICE COMMAND SETTINGS
  // ============================================
  "voiceCommand.enabled": true,
  "voiceCommand.language": "en-US",
  "voiceCommand.continuous": true,
  "voiceCommand.keywords": ["update", "set", "change", "apply", "headline", "cta", "theme"],

  // ============================================
  // COMMAND SHORTCUTS
  // ============================================
  "commandShortcuts": {
    "alt+cmd+u": "ui-commands.executeCommand",
    "alt+cmd+g": "ui-commands.getState",
    "alt+cmd+l": "ui-commands.listCommands",
    "alt+cmd+v": "voiceCommand.toggle"
  },

  // ============================================
  // EMMET
  // ============================================
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "emmet.triggerExpansionOnTab": true,

  // ============================================
  // BREADCRUMBS
  // ============================================
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.symbolPath": "on",

  // ============================================
  // PROBLEMS
  // ============================================
  "problems.decorations.enabled": true,

  // ============================================
  // WINDSURF SPECIFIC (AI-Powered IDE)
  // ============================================
  "windsurf.ai.enabled": true,
  "windsurf.ai.autoSuggest": true,
  "windsurf.ai.contextAware": true,

  // ============================================
  // EXPLORER
  // ============================================
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,

  // ============================================
  // COPILOT & AI SETTINGS (AUTONOMOUS)
  // ============================================
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "javascript": true,
    "typescript": true,
    "typescriptreact": true
  },
  "github.copilot.advanced": {
    "debug.showScores": false,
    "debug.overrideCacheStore": "",
    "debug.testOverrideProposals": null,
    "debug.parsePythonSemantic": false,
    "debug.runPythonSemantic": false,
    "debug.overrideEngine": "",
    "debug.overrideProxyUrl": ""
  },
  "github.copilot.chat.enabled": true,
  "codeium.enableCodeLens": true,
  "codeium.autocomplete.sourcegraph.enabled": false,

  // ============================================
  // WORKBENCH (UI & THEME - AUTONOMOUS)
  // ============================================
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.tree.indent": 20,
  "workbench.commandPalette.history": 50,
  "workbench.commandPalette.preserveInput": true,
  "workbench.editor.autoLockGroups": true,
  "workbench.editor.revealIfOpen": true,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.enablePreview": true,
  "workbench.editor.enablePreviewFromCodeNavigation": true,
  "workbench.editorAssociations": {
    "*.md": "default",
    "*.pdf": "default"
  },
  "workbench.sideBar.location": "left",
  "workbench.panel.defaultLocation": "bottom",
  "workbench.quickOpen.preserveInput": true,
  "workbench.quickOpenPeekMode": "inline",
  "workbench.activityBar.visible": true,
  "workbench.breadcrumbs.showClasses": true,
  "workbench.breadcrumbs.showConstants": true,
  "workbench.breadcrumbs.showDefinition": true,
  "workbench.breadcrumbs.showEnums": true,
  "workbench.breadcrumbs.showEnumMembers": true,
  "workbench.breadcrumbs.showEvents": true,
  "workbench.breadcrumbs.showFields": true,
  "workbench.breadcrumbs.showFiles": true,
  "workbench.breadcrumbs.showFunctions": true,
  "workbench.breadcrumbs.showInterfaces": true,
  "workbench.breadcrumbs.showKeys": true,
  "workbench.breadcrumbs.showMethods": true,
  "workbench.breadcrumbs.showModules": true,
  "workbench.breadcrumbs.showNamespaces": true,
  "workbench.breadcrumbs.showOperators": true,
  "workbench.breadcrumbs.showPackages": true,
  "workbench.breadcrumbs.showProperties": true,
  "workbench.breadcrumbs.showStructs": true,
  "workbench.breadcrumbs.showTypeParameters": true,
  "workbench.breadcrumbs.showVariables": true,

  // ============================================
  // DEBUGGING & DIAGNOSTICS
  // ============================================
  "debug.breakOnLog": false,
  "debug.showInlineBreakpointCandidates": true,
  "debug.openExplorerOnEnd": false,
  "debug.inlineValues": "auto",
  "debug.javascript.terminalOptions": {},
  "debug.logTimestamps": true,
  "problems.decorations.enabled": true,
  "problems.showCurrentInStatus": true,
  "problems.sortOrder": "severity",

  // ============================================
  // NOTIFICATION & STATUS
  // ============================================
  "notifications.centerlocation": "top",
  "notifications.useBuiltInDoNotDisturb": true,

  // ============================================
  // AUTOMATIC TASKS & BUILD
  // ============================================
  "task.allowAutomaticTasks": "on",
  "task.runOptions": {
    "runOn": "folderOpen"
  },
  "npm.autoDetect": "on",
  "npm.runSilent": false,

  // ============================================
  // SECURITY
  // ============================================
  "security.workspace.trust.untrustedFiles": "open"
}
