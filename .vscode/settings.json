{
  // ============================================
  // EDITOR SETTINGS
  // ============================================
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.linkedEditing": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.definitionLinkOpensInPeek": true,
  "editor.suggestSelection": "first",
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.inlineSuggest.enabled": true,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 120,
  "editor.rulers": [80, 120],
  "editor.semanticHighlighting.enabled": true,

  // ============================================
  // CODE ACTIONS ON SAVE
  // ============================================
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },

  // ============================================
  // FILES SETTINGS
  // ============================================
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.autoSave": "onFocusChange",
  "files.encoding": "utf8",

  // ============================================
  // FILES EXCLUDE (Hide from Explorer)
  // ============================================
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/.wrangler": true,
    "**/Media": true,
    "**/black-vault": true,
    "**/.DS_Store": true,
    "**/*.log": true
  },

  // ============================================
  // SEARCH EXCLUDE
  // ============================================
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.wrangler": true,
    "**/Media": true,
    "**/black-vault": true,
    "**/*.lock": true,
    "package-lock.json": true,
    "pnpm-lock.yaml": true
  },

  // ============================================
  // FILES WATCHER EXCLUDE (Performance)
  // ============================================
  "files.watcherExclude": {
    "**/.git/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/.wrangler/**": true,
    "**/Media/**": true,
    "**/black-vault/**": true,
    "**/voicetowebsite-orchestrator/node_modules/**": true,
    "**/*.log": true
  },

  // ============================================
  // ESLINT SETTINGS
  // ============================================
  "eslint.enable": true,
  "eslint.packageManager": "npm",
  "eslint.run": "onSave",
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact", "html"],
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],

  // ============================================
  // TYPESCRIPT SETTINGS
  // ============================================
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.tsserver.maxTsServerMemory": 4096,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.autoImports": true,
  "typescript.preferences.quoteStyle": "single",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,
  "javascript.preferences.quoteStyle": "single",

  // ============================================
  // NPM SETTINGS
  // ============================================
  "npm.packageManager": "npm",
  "npm.enableScriptExplorer": true,
  "npm.scriptExplorerAction": "run",

  // ============================================
  // GIT SETTINGS
  // ============================================
  "git.enableSmartCommit": true,
  "git.autofetch": false,
  "git.confirmSync": false,
  "git.enableCommitSigning": false,

  // ============================================
  // TERMINAL SETTINGS
  // ============================================
  "terminal.integrated.cwd": "${workspaceFolder}",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.scrollback": 10000,

  // ============================================
  // LANGUAGE-SPECIFIC FORMATTING
  // ============================================
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on"
  },
  "[html]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ============================================
  // SPELL CHECKER (cSpell)
  // ============================================
  "cSpell.words": [
    "ADSENSE",
    "Adsense",
    "AUTOINCREMENT",
    "Cloudflare",
    "Metadata",
    "Negotiables",
    "Playfair",
    "Reshimming",
    "SAMEORIGIN",
    "Segoe",
    "VOICETOWEBSITE",
    "Voiceto",
    "Wrangler",
    "adsbygoogle",
    "adsense",
    "appstore",
    "badsbygoogle",
    "buildhome",
    "ecommerce",
    "esbuild",
    "genai",
    "googlesyndication",
    "lucide",
    "massets",
    "mbuilding",
    "mdist",
    "mindex",
    "morphism",
    "mvite",
    "nosniff",
    "pagead",
    "playsinline",
    "protobufjs",
    "spectralize",
    "vite",
    "vitejs",
    "vitest",
    "voicetowebsite",
    "vtwcfm",
    "webdev",
    "webforge",
    "workerd",
    "wrangler"
  ],
  "cSpell.enableFiletypes": ["!git-commit"],

  // ============================================
  // CLOUDFLARE WORKERS / WRANGLER
  // ============================================
  "cloudflare.workers.enableLinting": true,

  // ============================================
  // PATH INTELLISENSE
  // ============================================
  "path-intellisense.mappings": {
    "@": "${workspaceFolder}/src"
  },

  // ============================================
  // EXTENSIONS
  // ============================================
  "extensions.ignoreRecommendations": false,

  // ============================================
  // CONTINUE.DEV SETTINGS (AI Chat & Commands)
  // ============================================
  "continue.enableDebugLogging": true,
  "continue.enableServerAutoLaunch": true,
  "continue.customAttributes": {
    "voiceToWebsiteIntegration": "enabled",
    "uiCommandAPI": "https://voicetowebsite.com/api/ui-command",
    "voiceEnabled": true,
    "customGptEnabled": true
  },

  // ============================================
  // VOICE COMMAND SETTINGS
  // ============================================
  "voiceCommand.enabled": true,
  "voiceCommand.language": "en-US",
  "voiceCommand.continuous": true,
  "voiceCommand.keywords": ["update", "set", "change", "apply", "headline", "cta", "theme"],

  // ============================================
  // COMMAND SHORTCUTS
  // ============================================
  "commandShortcuts": {
    "alt+cmd+u": "ui-commands.executeCommand",
    "alt+cmd+g": "ui-commands.getState",
    "alt+cmd+l": "ui-commands.listCommands",
    "alt+cmd+v": "voiceCommand.toggle"
  },

  // ============================================
  // EMMET
  // ============================================
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "emmet.triggerExpansionOnTab": true,

  // ============================================
  // BREADCRUMBS
  // ============================================
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.symbolPath": "on",

  // ============================================
  // PROBLEMS
  // ============================================
  "problems.decorations.enabled": true,

  // ============================================
  // WINDSURF SPECIFIC (AI-Powered IDE)
  // ============================================
  "windsurf.ai.enabled": true,
  "windsurf.ai.autoSuggest": true,
  "windsurf.ai.contextAware": true,

  // ============================================
  // EXPLORER
  // ============================================
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,

  // ============================================
  // WORKBENCH
  // ============================================
  "workbench.startupEditor": "welcomePage",
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.iconTheme": "vs-seti",
  "workbench.tree.indent": 20,

  // ============================================
  // SECURITY
  // ============================================
  "security.workspace.trust.untrustedFiles": "open"
}
