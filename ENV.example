# Cloudflare Worker (orchestrator) environment variables
# Preferred (free/edge): Cloudflare Workers AI binding via `wrangler.toml` ([ai] binding = "AI").
# Fallback (optional): external OpenAI key for legacy paths.
OPENAI_API=
OPENAI_API_KEY3=
OPENAI_MODEL=

# Admin / bot hub control (send as `x-admin-token` header to protected endpoints)
CONTROL_PASSWORD=
# Optional: separate signing secret for admin cookies (recommended).
# If empty, `CONTROL_PASSWORD` is used for signing too.
ADMIN_COOKIE_SECRET=

# Cloudflare API (used by /api/analytics/* proxy)
# Recommended: create a dedicated token scoped to zone analytics read.
CF_ZONE_ID=
CF_API_TOKEN=
CF_API_TOKEN2=
# Fallbacks supported (not recommended for runtime use):
CF_USER_TOKEN=
CF_ACCOUNT_API_VOICETOWEBSITE=
# GitHub auth/repo (use these instead of GITHUB_* if your host blocks that prefix)
GH_TOKEN=
GH_BOT_TOKEN=
PERSONAL_ACCESS_TOKEN_API=
GH_REPO=
GH_BASE_BRANCH=
ADMIN_ROLE=
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_ID_PROD=
VITE_PAYPAL_CLIENT_ID=
STRIPE_PUBLIC=
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_ALLOW_CUSTOM_AMOUNT=
STRIPE_PAYMENT_METHOD_TYPES=card,cashapp,klarna
STRIPE_PRICE_STARTER=
STRIPE_PRICE_GROWTH=
STRIPE_PRICE_ENTERPRISE=
STRIPE_PRICE_LIFETIME=
STRIPE_PAYMENT_LINK_STARTER=
STRIPE_PAYMENT_LINK_GROWTH=
STRIPE_PAYMENT_LINK_ENTERPRISE=
STRIPE_PAYMENT_LINK_LIFETIME=
STRIPE_BUY_BUTTON_ID_STARTER=
STRIPE_BUY_BUTTON_ID_GROWTH=
STRIPE_BUY_BUTTON_ID_ENTERPRISE=
STRIPE_BUY_BUTTON_ID_LIFETIME=
