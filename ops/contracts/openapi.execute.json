{
  "openapi": "3.1.0",
  "info": {
    "title": "VoiceToWebsite Execute API",
    "version": "1.2.0",
    "description": "Production orchestration API for VoiceToWebsite. This contract is for Custom GPT Actions using a single canonical endpoint."
  },
  "servers": [
    {
      "url": "https://voicetowebsite.com/api",
      "description": "Production API base URL"
    }
  ],
  "tags": [
    {
      "name": "Orchestration",
      "description": "Plan, preview, apply, deploy, status, and rollback operations."
    }
  ],
  "paths": {
    "/execute": {
      "post": {
        "operationId": "executeCommand",
        "tags": ["Orchestration"],
        "summary": "Execute orchestration action",
        "description": "Runs one orchestration action. Use preview first, then apply/deploy/rollback with confirmToken.",
        "security": [
          {
            "OrchestratorToken": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ExecuteAction"
              },
              "examples": {
                "plan": {
                  "summary": "Plan a homepage update",
                  "value": {
                    "action": "plan",
                    "idempotencyKey": "plan-home-20260211-01",
                    "command": "Plan a homepage hero refresh for conversion lift",
                    "target": "site",
                    "safetyLevel": "low",
                    "actor": "custom-gpt"
                  }
                },
                "preview": {
                  "summary": "Preview changes and get confirm token",
                  "value": {
                    "action": "preview",
                    "idempotencyKey": "preview-home-20260211-01",
                    "command": "Update homepage hero headline to Build Faster on the Edge",
                    "target": "site",
                    "safetyLevel": "high",
                    "actor": "custom-gpt"
                  }
                },
                "apply": {
                  "summary": "Apply a previewed change",
                  "value": {
                    "action": "apply",
                    "idempotencyKey": "preview-home-20260211-01",
                    "command": "Update homepage hero headline to Build Faster on the Edge",
                    "confirmToken": "vtwcfm.<payload>.<signature>",
                    "target": "site",
                    "safetyLevel": "high",
                    "actor": "custom-gpt"
                  }
                },
                "deploy": {
                  "summary": "Deploy with explicit confirm token",
                  "value": {
                    "action": "deploy",
                    "idempotencyKey": "deploy-20260211-01",
                    "command": "Deploy latest production-safe changes",
                    "confirmToken": "vtwcfm.<payload>.<signature>",
                    "target": "site",
                    "safetyLevel": "high",
                    "actor": "custom-gpt"
                  }
                },
                "status": {
                  "summary": "Fetch orchestration status",
                  "value": {
                    "action": "status",
                    "idempotencyKey": "status-20260211-01",
                    "target": "site",
                    "safetyLevel": "low",
                    "actor": "custom-gpt"
                  }
                },
                "rollback": {
                  "summary": "Rollback last production change",
                  "value": {
                    "action": "rollback",
                    "idempotencyKey": "rollback-20260211-01",
                    "command": "Rollback last production change",
                    "confirmToken": "vtwcfm.<payload>.<signature>",
                    "target": "site",
                    "safetyLevel": "high",
                    "actor": "custom-gpt"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Action accepted and executed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ExecuteEvent"
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized (missing or invalid x-orch-token/admin cookie)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden (confirmToken missing/invalid/expired)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Execution error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ExecuteEvent"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "OrchestratorToken": {
        "type": "apiKey",
        "in": "header",
        "name": "x-orch-token",
        "description": "Custom header token for orchestration calls."
      }
    },
    "schemas": {
      "ExecuteAction": {
        "type": "object",
        "additionalProperties": false,
        "description": "Action request for POST /execute.",
        "properties": {
          "action": {
            "type": "string",
            "enum": ["plan", "preview", "apply", "deploy", "status", "rollback"],
            "description": "Requested orchestration operation."
          },
          "idempotencyKey": {
            "type": "string",
            "minLength": 3,
            "description": "Unique key for deduplication."
          },
          "command": {
            "type": "string",
            "description": "Natural-language command. Required for plan/preview/apply."
          },
          "target": {
            "type": "string",
            "enum": ["site"],
            "default": "site",
            "description": "Production-only execution target."
          },
          "safetyLevel": {
            "type": "string",
            "enum": ["low", "medium", "high"],
            "default": "medium",
            "description": "Risk level used by policy and workflow."
          },
          "confirmToken": {
            "type": "string",
            "description": "Single-use expiring token from preview, required for apply/deploy/rollback."
          },
          "actor": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "object",
                "additionalProperties": true
              }
            ],
            "description": "Caller identity and context."
          },
          "page": {
            "type": "string",
            "description": "Optional page target (for example: \"store.html\" or \"all\")."
          },
          "path": {
            "type": "string",
            "description": "Optional alias for page target."
          },
          "file": {
            "type": "string",
            "description": "Optional file target (HTML or CSS depending on action)."
          },
          "parameters": {
            "type": "object",
            "additionalProperties": true,
            "description": "Optional extension parameters."
          }
        },
        "required": ["action", "idempotencyKey"],
        "allOf": [
          {
            "if": {
              "properties": {
                "action": {
                  "enum": ["plan", "preview", "apply"]
                }
              },
              "required": ["action"]
            },
            "then": {
              "required": ["command"]
            }
          },
          {
            "if": {
              "properties": {
                "action": {
                  "enum": ["apply", "deploy", "rollback"]
                }
              },
              "required": ["action"]
            },
            "then": {
              "required": ["confirmToken"]
            }
          }
        ]
      },
      "ExecuteEvent": {
        "type": "object",
        "additionalProperties": false,
        "description": "Canonical event envelope returned by /execute.",
        "properties": {
          "eventId": {
            "type": "string",
            "description": "Unique event identifier."
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "Event creation time in ISO format."
          },
          "traceId": {
            "type": "string",
            "description": "Trace identifier for request correlation."
          },
          "eventType": {
            "type": "string",
            "enum": ["planned", "previewed", "confirmed", "applied", "deployed", "rolled_back", "error"],
            "description": "Lifecycle event type."
          },
          "action": {
            "$ref": "#/components/schemas/ExecuteAction"
          },
          "result": {
            "type": ["object", "array", "string", "number", "boolean", "null"],
            "description": "Action result payload. For preview this may include confirmToken/confirmBy."
          },
          "error": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "message": {
                "type": "string"
              }
            },
            "description": "Error details for failed actions."
          }
        },
        "required": ["eventId", "timestamp", "traceId", "eventType", "action"]
      },
      "ErrorResponse": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "error": {
            "type": "string"
          },
          "traceId": {
            "type": "string"
          }
        },
        "required": ["error"]
      }
    }
  }
}
